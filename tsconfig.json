{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "typeRoots": [
    "./node_modules/@types/",
    "./public_src/typings/"
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
